<Window x:Class="TRYINGSMT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRYINGSMT"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/MAINbg.png"/>
    </Window.Background>
    <Grid Margin="10,10,0,0">


        <Image Margin="62,790,396,-104" Source="/RACELanePIC.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.138"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>


        <Image Margin="-6,199,490,592" Source="/backgroundRING.png" Stretch="Fill"/>


        <Image Margin="-6,384,490,407" Source="/backgroundRING.png" Stretch="Fill"/>


        <Image Margin="-5,565,489,224" Source="/backgroundRING.png" Stretch="Fill"/>


        <Image Margin="-6,751,489,40" Source="/backgroundRING.png" Stretch="Fill"/>


        <Rectangle HorizontalAlignment="Left" Width="10" Height="10" Margin="790,317,0,0" Stroke="Black" VerticalAlignment="Top" Opacity="0"/>
        <Label Content="Control" HorizontalAlignment="Left" Margin="107,228,0,0" VerticalAlignment="Top" FontFamily="DePixel" FontSize="10"/>
        <Label Content="Ring 1 (S)" HorizontalAlignment="Left" Margin="104,412,0,0" VerticalAlignment="Top" FontFamily="DePixel" FontSize="10"/>
        <Label Content="Ring 2 (M)" HorizontalAlignment="Left" Margin="109,590,0,0" VerticalAlignment="Top" FontFamily="DePixel" FontSize="10"/>
        <Label Content="Ring 3 (H)" HorizontalAlignment="Left" Margin="109,777,0,0" VerticalAlignment="Top" FontFamily="DePixel" FontSize="10"/>
        <Label x:Name="lblControlRing" Content="Label" HorizontalAlignment="Left" Margin="5,249,0,0" VerticalAlignment="Top" Width="268" FontFamily="DePixel Breit"/>
        <Label x:Name="lblRing1" Content="Label" HorizontalAlignment="Left" Margin="11,437,0,0" VerticalAlignment="Top" FontFamily="DePixel Breit"/>
        <Label x:Name="lblRing2" Content="Label" HorizontalAlignment="Left" Margin="11,621,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.447,0.425" FontFamily="DePixel Breit"/>
        <Label x:Name="lblRing3" Content="Label" HorizontalAlignment="Left" Margin="15,797,0,0" VerticalAlignment="Top" FontFamily="DePixel Breit"/>
        <TextBox x:Name="txtInput" TextChanged="txtInput_TextChanged"
         HorizontalAlignment="Left" Margin="300,199,0,0" VerticalAlignment="Top"
         FontFamily="Courier New" Width="446" Height="41">
            <TextBox.Background>
                <ImageBrush ImageSource="/backgroundRING.png" TileMode="None" Stretch="None"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="txtEncrypt" Text="Encrypt" HorizontalAlignment="Left" Margin="300,280,0,0" VerticalAlignment="Top" FontFamily="Courier New" Width="446" Height="41" IsEnabled="False" Foreground="Black">
            <TextBox.Background>
                <ImageBrush ImageSource="/backgroundRING.png" Stretch="None"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="txtEncryptMirror" Text="Mirror" HorizontalAlignment="Left" Margin="300,359,0,0" VerticalAlignment="Top" FontFamily="Courier New" Width="446" Height="42" IsEnabled="False">
            <TextBox.Background>
                <ImageBrush ImageSource="/backgroundRING.png" Stretch="None"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="btnRotor"  Content="Rotor On" HorizontalAlignment="Left" Margin="4,171,0,0" VerticalAlignment="Top" Click="btnRotor_Click" FontFamily="DePixel" Width="49" FontSize="7" Height="20"/>
        <TextBox x:Name="txtBRing1Init" HorizontalAlignment="Left" Margin="74,173,0,0" TextWrapping="Wrap" Text="0 - 25" VerticalAlignment="Top" Width="56" Height="18" GotFocus="txtBRing1Init_GotFocus" HorizontalContentAlignment="Center" RenderTransformOrigin="-0.431,0.41" FontFamily="DePixel Breit"/>
        <TextBox x:Name="txtBRing2Init" HorizontalAlignment="Left" Margin="162,173,0,0" TextWrapping="Wrap" Text="0 - 25" VerticalAlignment="Top" Width="55" GotFocus="txtBRing2Init_GotFocus" HorizontalContentAlignment="Center" FontFamily="DePixel Breit"/>
        <TextBox x:Name="txtBRing3Init" HorizontalAlignment="Left" Margin="238,173,0,0" TextWrapping="Wrap" Text="0 -25" VerticalAlignment="Top" Width="49" Height="18" GotFocus="txtBRing3Init_GotFocus" HorizontalContentAlignment="Center" FontFamily="DePixel Breit"/>
        <Label Content="H" HorizontalAlignment="Left" Margin="58,165,0,0" VerticalAlignment="Top" FontFamily="DePixel"/>
        <Label Content="M" HorizontalAlignment="Left" Margin="136,165,0,0" VerticalAlignment="Top" FontFamily="DePixel"/>
        <Label Content="S" HorizontalAlignment="Left" Margin="222,165,0,0" VerticalAlignment="Top" FontFamily="DePixel"/>

        <Label Content="Input Message:" HorizontalAlignment="Left" Margin="296,167,0,0" VerticalAlignment="Top" Width="150" Height="44" FontFamily="DePixel"/>
        <Label Content="Encrypted Message:" HorizontalAlignment="Left" Margin="296,248,0,0" VerticalAlignment="Top" Width="192" Height="46" FontFamily="DePixel"/>
        <Label Content="Encrypted Message with Mirroring:" HorizontalAlignment="Left" Margin="296,331,0,0" VerticalAlignment="Top" Width="345" Height="44" FontFamily="DePixel"/>
        <Label Content="Plugboard (AB CD EF):" HorizontalAlignment="Left" Margin="296,416,0,0" VerticalAlignment="Top" Width="158" Height="45" FontFamily="DePixel" FontSize="10"/>
        <TextBox x:Name="txtPlugboard" HorizontalAlignment="Left" Margin="449,417,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208" TextChanged="txtPlugboard_TextChanged" Height="31">
            <TextBox.Background>
                <ImageBrush ImageSource="/backgroundRING.png" Stretch="None"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="btnSetPlugboard" Content="Set Plugboard" HorizontalAlignment="Left" Margin="662,417,0,0" VerticalAlignment="Top" Click="btnSetPlugboard_Click" Width="84" Height="31" FontFamily="DePixel" FontSize="8"/>
        <Image Margin="182,-13,188,801" Source="/Blue Colorful 8Bit Game Presentation.png" Stretch="Fill"/>
        <Image Margin="0,5,13,783" Source="/clouds.png" Stretch="Fill"/>
        <Image Margin="211,527,447,334" Source="/BUNNYbongPIC.png" Stretch="Fill" Opacity="0.9"/>
        <Image Margin="680,298,-27,513" Source="/DICEpic.png" Stretch="Fill"/>


    </Grid>
</Window>
